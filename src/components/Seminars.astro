---
// Seminars Component - Displays seminar offerings
import "../styles/Seminars.scss";
import { seminars } from "../data/seminars";
---

<section class="seminars" id="seminarios">
  <div class="container">
    <div class="seminars-header">
      <h2 class="section-title">Nuestros Seminarios</h2>
      <p class="section-subtitle">
        Capacítate con seminarios especializados diseñados para profesionales de
        la fonoaudiología
      </p>
    </div>

    <div class="seminars-grid">
      {
        seminars.map((seminar) => (
          <article class="seminar-card">
            <div class="seminar-header">
              <h3 class="seminar-title">{seminar.title}</h3>
              <div class="seminar-meta">
                <span class="meta-item">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                  </svg>
                  {seminar.duration}
                </span>
                <span class="meta-item">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <rect x="2" y="7" width="20" height="14" rx="2" ry="2" />
                    <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" />
                  </svg>
                  {seminar.format}
                </span>
              </div>
            </div>

            <p class="seminar-description">{seminar.description}</p>

            <div class="seminar-audience">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                <circle cx="9" cy="7" r="4" />
                <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                <path d="M16 3.13a4 4 0 0 1 0 7.75" />
              </svg>
              <strong>Dirigido a:</strong> {seminar.audience}
            </div>

            <div class="seminar-highlights">
              <h4>Incluye:</h4>
              <ul>
                {seminar.highlights.map((highlight) => (
                  <li>{highlight}</li>
                ))}
              </ul>
            </div>

            <button class="seminar-cta">
              Más información
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="5" y1="12" x2="19" y2="12" />
                <polyline points="12 5 19 12 12 19" />
              </svg>
            </button>
          </article>
        ))
      }
    </div>

    <div class="seminars-cta">
      <h3>¿Interesado en nuestros seminarios?</h3>
      <p>Contáctanos para conocer las próximas fechas y reservar tu cupo</p>
      <a href="#contacto" class="cta-button">
        Contactar ahora
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M22 2L11 13"></path>
          <path d="M22 2L15 22L11 13L2 9L22 2Z"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
