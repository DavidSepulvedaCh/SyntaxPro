---
import "../styles/Footer.scss";
import imagesConfig from "../data/images.json";
import { routes } from "../utils/routes";
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-column footer-brand">
        <a href={routes.home()} class="footer-logo">
          <img src={imagesConfig.logo} alt="SyntaxPro Logo" />
        </a>
        <p class="footer-description">
          Transformando la práctica clínica en morfosintaxis mediante
          intervenciones de Milieu Teaching basadas en evidencia.
        </p>
      </div>

      <div class="footer-column">
        <h4 class="footer-title">Navegación</h4>
        <ul class="footer-links">
          <li><a href="#inicio">Inicio</a></li>
          <li><a href="#sobre-mi">Sobre Mí</a></li>
          <li><a href="#servicios">Servicios</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4 class="footer-title">Servicios</h4>
        <ul class="footer-links">
          <li><a href="#recursos">Recursos Digitales</a></li>
          <li><a href="#talleres">Talleres y Seminarios</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4 class="footer-title">Contacto</h4>
        <ul class="footer-contact">
          <li>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <a href="mailto:info@syntaxpro.com">info@syntaxpro.com</a>
          </li>
          <li>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
            <a href="tel:+573142136523">+57 314 213 6523</a>
          </li>
          <li>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <span>Pamplona, Colombia</span>
          </li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p class="copyright">
          &copy; {new Date().getFullYear()} SyntaxPro. Todos los derechos reservados.
        </p>
        <div class="footer-legal">
          <a href="#">Política de Privacidad</a>
          <span class="separator">|</span>
          <a href="#">Términos y Condiciones</a>
        </div>
      </div>
    </div>
  </div>
</footer>
