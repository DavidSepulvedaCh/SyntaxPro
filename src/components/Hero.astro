---
import "../styles/Hero.scss";
import imagesConfig from "../data/images.json";
import { routes } from "../utils/routes";
---

<section class="hero" id="inicio">
  <div class="hero-background">
    <div class="gradient-overlay"></div>
    <div class="pattern"></div>
  </div>

  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <div class="brand-badge">
          <span class="gradient-text">SyntaxPro</span>
        </div>
        <h1 class="hero-title">
          Seminario de Milieu Teaching para la Intervención Morfosintáctica con
          Estrategias Validadas
        </h1>
        <p class="hero-subtitle">
          Domina el Milieu Teaching en morfosintaxis con nuestro seminario y
          potencia la comunicación diaria de tus pacientes.
        </p>
        <div class="hero-buttons">
          <a href={routes.login()} class="btn btn-primary">
            Comenzar Ahora
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
          <a href="#servicios" class="btn btn-secondary"> Conoce Más </a>
        </div>
      </div>

      <div class="hero-image">
        <div class="image-container">
          <div class="floating-card card-1">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="40"
              height="40"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            <span>Transformando la Práctica Profesional</span>
          </div>
          <div class="floating-card card-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="40"
              height="40"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
            <span>Resultados Comprobados</span>
          </div>
          <div class="floating-card card-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="40"
              height="40"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
              <path d="M2 17l10 5 10-5"></path>
              <path d="M2 12l10 5 10-5"></path>
            </svg>
            <span>Comunicación Funcional Garantizada</span>
          </div>
          <div class="hero-logo-display">
            <img src={imagesConfig.logo} alt="SyntaxPro Logo" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
