---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Seminario en Milieu Teaching - SyntaxPro">
  <Navbar />

  <main class="pdf-viewer-page">
    <div class="pdf-container">
      <div class="pdf-header">
        <h1>Seminario en Milieu Teaching</h1>
        <p>Informaci√≥n detallada sobre nuestro seminario especializado</p>
      </div>

      <div class="pdf-viewer">
        <iframe
          src="/SyntaxPro/servicios/Opcion_1.pdf"
          title="Seminario en Milieu Teaching"
          class="pdf-iframe"></iframe>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .pdf-viewer-page {
    min-height: 100vh;
    padding: 100px 0 0;
  }

  .pdf-viewer-page::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e0e7ff 0%, #e9e3ff 100%);
    z-index: -1;
  }

  .pdf-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  .pdf-header {
    text-align: center;
    margin-bottom: 2rem;
    color: #1e293b;
  }

  .pdf-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    text-shadow: none;
  }

  .pdf-header p {
    font-size: 1.2rem;
    color: #64748b;
    margin: 0;
  }

  .pdf-viewer {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    margin-bottom: 2rem;
  }

  .pdf-iframe {
    width: 100%;
    height: 80vh;
    min-height: 600px;
    border: none;
    display: block;
  }

  .pdf-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  @media (max-width: 768px) {
    .pdf-viewer-page {
      padding: 80px 0 0;
    }

    .pdf-container {
      padding: 1rem;
    }

    .pdf-header h1 {
      font-size: 1.75rem;
    }

    .pdf-header p {
      font-size: 1rem;
    }

    .pdf-iframe {
      height: 70vh;
      min-height: 500px;
    }
  }
</style>
