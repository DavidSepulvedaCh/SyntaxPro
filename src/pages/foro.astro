---
import Layout from "../layouts/DashboardLayout.astro";
---

<Layout title="Comunidad Privada | SyntaxPro">
  <main class="forum-container">
    <header class="forum-header">
      <div class="header-content">
        <h1>Comunidad Privada</h1>
        <p>
          Comparte experiencias, resuelve dudas y conecta con otros
          profesionales
        </p>
      </div>
      <button class="btn-primary" id="newTopicBtn">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Nuevo Tema
      </button>
    </header>

    <div class="forum-content">
      <aside class="forum-sidebar">
        <div class="category-list">
          <h3>Categorías</h3>
          <button class="category-item active" data-category="all">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <line x1="8" y1="6" x2="21" y2="6"></line>
              <line x1="8" y1="12" x2="21" y2="12"></line>
              <line x1="8" y1="18" x2="21" y2="18"></line>
              <line x1="3" y1="6" x2="3.01" y2="6"></line>
              <line x1="3" y1="12" x2="3.01" y2="12"></line>
              <line x1="3" y1="18" x2="3.01" y2="18"></line>
            </svg>
            Todos los temas
          </button>
          <button class="category-item" data-category="general">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
              ></path>
            </svg>
            General
          </button>
          <button class="category-item" data-category="dudas">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
              <line x1="12" y1="17" x2="12.01" y2="17"></line>
            </svg>
            Dudas y Consultas
          </button>
          <button class="category-item" data-category="casos">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"
              ></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            Casos Clínicos
          </button>
          <button class="category-item" data-category="recursos">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            Recursos Compartidos
          </button>
        </div>
      </aside>

      <section class="topics-section">
        <div class="topics-list" id="topicsList">
          <!-- Los topics se cargarán dinámicamente -->
        </div>
      </section>
    </div>
  </main>

  <!-- Modal para nuevo tema -->
  <div class="modal" id="newTopicModal">
    <div class="modal-overlay"></div>
    <div class="modal-dialog">
      <div class="modal-header">
        <h2>Crear Nuevo Tema</h2>
        <button class="close-btn" id="closeModalBtn">×</button>
      </div>
      <div class="modal-body">
        <form id="newTopicForm">
          <div class="form-group">
            <label for="topicTitle">Título</label>
            <input
              type="text"
              id="topicTitle"
              placeholder="¿Cuál es tu pregunta o tema?"
              required
            />
          </div>
          <div class="form-group">
            <label for="topicCategory">Categoría</label>
            <select id="topicCategory" required>
              <option value="general">General</option>
              <option value="dudas">Dudas y Consultas</option>
              <option value="casos">Casos Clínicos</option>
              <option value="recursos">Recursos Compartidos</option>
            </select>
          </div>
          <div class="form-group">
            <label for="topicContent">Contenido</label>
            <textarea
              id="topicContent"
              rows="6"
              placeholder="Describe tu tema o pregunta..."
              required></textarea>
          </div>
          <div class="modal-actions">
            <button type="button" class="btn-secondary" id="cancelBtn"
              >Cancelar</button
            >
            <button type="submit" class="btn-primary">Publicar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  .forum-container {
    min-height: 100vh;
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
    background: #f1f5f9;
  }

  .forum-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2.5rem;
    padding: 2rem;
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .header-content h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 0.5rem 0;
  }

  .header-content p {
    color: #64748b;
    margin: 0;
    font-size: 1rem;
  }

  .btn-primary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: #3b82f6;
    color: #ffffff;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.95rem;
  }

  .btn-primary:hover {
    background: #2563eb;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  .forum-content {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 2rem;
    align-items: start;
  }

  .forum-sidebar {
    background: #ffffff;
    border-radius: 16px;
    padding: 1.5rem;
    height: fit-content;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    position: sticky;
    top: 2rem;
  }

  .category-list h3 {
    font-size: 0.875rem;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .category-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    padding: 0.75rem;
    background: transparent;
    border: none;
    border-radius: 8px;
    color: #334155;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;
    margin-bottom: 0.5rem;
  }

  .category-item:hover {
    background: #f8fafc;
  }

  .category-item.active {
    background: #eff6ff;
    color: #3b82f6;
    font-weight: 600;
  }

  .category-item svg {
    flex-shrink: 0;
  }

  .topics-section {
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  .topics-list {
    display: flex;
    flex-direction: column;
  }

  .topic-item {
    padding: 2rem;
    border-bottom: 1px solid #f1f5f9;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .topic-item:hover {
    background: #f8fafc;
    padding-left: 2.25rem;
  }

  .topic-item:last-child {
    border-bottom: none;
  }

  .topic-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
  }

  .topic-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .topic-category {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: #eff6ff;
    color: #3b82f6;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .topic-content {
    color: #334155;
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .topic-meta {
    display: flex;
    align-items: center;
    gap: 2rem;
    font-size: 0.875rem;
    color: #64748b;
  }

  .topic-meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
  }

  .topic-meta-item svg {
    width: 16px;
    height: 16px;
    opacity: 0.7;
    color: #64748b;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 500;
    color: #334155;
  }

  .author-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #e2e8f0;
  }

  /* Modal */
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .modal.show {
    display: flex;
  }

  .modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
  }

  .modal-dialog {
    position: relative;
    background: white;
    border-radius: 16px;
    max-width: 600px;
    width: 100%;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    z-index: 1001;
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .modal-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #0f172a;
    margin: 0;
  }

  .close-btn {
    background: #f1f5f9;
    border: none;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    font-size: 24px;
    cursor: pointer;
    color: #64748b;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  .modal-body {
    padding: 1.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-weight: 600;
    color: #0f172a;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    font-size: 0.95rem;
    font-family: inherit;
    transition: border-color 0.2s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #3b82f6;
  }

  .form-group textarea {
    resize: vertical;
  }

  .modal-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
  }

  .btn-secondary {
    padding: 0.75rem 1.5rem;
    background: #f1f5f9;
    color: #334155;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.95rem;
  }

  .btn-secondary:hover {
    background: #e2e8f0;
  }

  .empty-state {
    text-align: center;
    padding: 5rem 2rem;
    color: #64748b;
  }

  .empty-state svg {
    width: 72px;
    height: 72px;
    margin: 0 auto 1.5rem;
    opacity: 0.3;
    color: #64748b;
  }

  .empty-state h3 {
    font-size: 1.25rem;
    color: #0f172a;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .empty-state p {
    color: #64748b;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .forum-content {
      grid-template-columns: 1fr;
    }

    .forum-sidebar {
      position: static;
      order: 2;
    }

    .topics-section {
      order: 1;
    }
  }

  @media (max-width: 768px) {
    .forum-container {
      padding: 1rem;
    }

    .forum-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
      padding: 1.5rem;
    }

    .header-content h1 {
      font-size: 1.5rem;
    }

    .btn-primary {
      width: 100%;
      justify-content: center;
    }

    .topic-item {
      padding: 1.5rem;
    }

    .topic-item:hover {
      padding-left: 1.5rem;
    }

    .topic-meta {
      flex-wrap: wrap;
      gap: 1rem;
    }
  }
</style>

<script>
  // Get base URL from document location
  const getBaseUrl = () => {
    const path = window.location.pathname;
    // Extract base from path (e.g., /SyntaxPro/ from /SyntaxPro/foro)
    const match = path.match(/^(\/[^\/]+\/)/);
    return match ? match[1] : '/';
  };

  // Verificar autenticación
  if (typeof window !== "undefined") {
    const isAuthenticated = sessionStorage.getItem("isAuthenticated");
    if (!isAuthenticated) {
      window.location.href = `${getBaseUrl()}login`;
    }
  }

  // Datos de ejemplo
  const topics = [
    {
      id: 1,
      title: "¿Cómo implementar el Milieu Teaching en sesiones grupales?",
      content:
        "Estoy trabajando con un grupo de 4 niños y me gustaría saber cómo adaptar las estrategias de Milieu Teaching para sesiones grupales...",
      category: "dudas",
      author: {
        name: "María González",
        avatar:
          "https://images.unsplash.com/photo-1494790108377-be9c29b29330?q=80&w=100&auto=format&fit=crop",
      },
      replies: 8,
      views: 45,
      date: "Hace 2 horas",
    },
    {
      id: 2,
      title: "Caso de éxito: Niño de 5 años con TEL",
      content:
        "Quiero compartir mi experiencia aplicando las técnicas del módulo 1 con un paciente de 5 años diagnosticado con TEL...",
      category: "casos",
      author: {
        name: "Carlos Ramírez",
        avatar:
          "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=100&auto=format&fit=crop",
      },
      replies: 12,
      views: 89,
      date: "Hace 5 horas",
    },
    {
      id: 3,
      title: "Recursos adicionales de evidencia científica",
      content:
        "He recopilado algunos artículos científicos adicionales sobre la efectividad del Milieu Teaching que pueden complementar el material del curso...",
      category: "recursos",
      author: {
        name: "Ana López",
        avatar:
          "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?q=80&w=100&auto=format&fit=crop",
      },
      replies: 5,
      views: 67,
      date: "Hace 1 día",
    },
    {
      id: 4,
      title: "Presentación del grupo",
      content:
        "¡Hola a todos! Me gustaría que nos presentemos. Yo soy fonoaudióloga con 8 años de experiencia trabajando principalmente con niños...",
      category: "general",
      author: {
        name: "Laura Martínez",
        avatar:
          "https://images.unsplash.com/photo-1489424731084-a5d8b219a5bb?q=80&w=100&auto=format&fit=crop",
      },
      replies: 24,
      views: 156,
      date: "Hace 2 días",
    },
  ];

  const categoryNames: Record<string, string> = {
    general: "General",
    dudas: "Dudas y Consultas",
    casos: "Casos Clínicos",
    recursos: "Recursos Compartidos",
  };

  let currentCategory = "all";

  function renderTopics(filter = "all") {
    const topicsList = document.getElementById("topicsList");
    if (!topicsList) return;

    const filteredTopics =
      filter === "all" ? topics : topics.filter((t) => t.category === filter);

    if (filteredTopics.length === 0) {
      topicsList.innerHTML = `
        <div class="empty-state">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
          </svg>
          <h3>No hay temas aún</h3>
          <p>Sé el primero en crear un tema en esta categoría</p>
        </div>
      `;
      return;
    }

    topicsList.innerHTML = filteredTopics
      .map(
        (topic) => `
      <div class="topic-item">
        <div class="topic-header">
          <div>
            <h3 class="topic-title">${topic.title}</h3>
            <span class="topic-category">${categoryNames[topic.category]}</span>
          </div>
        </div>
        <p class="topic-content">${topic.content}</p>
        <div class="topic-meta">
          <div class="author-info">
            <img src="${topic.author.avatar}" alt="${topic.author.name}" class="author-avatar" />
            <span>${topic.author.name}</span>
          </div>
          <div class="topic-meta-item">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
            ${topic.replies} respuestas
          </div>
          <div class="topic-meta-item">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
            ${topic.views} vistas
          </div>
          <span>${topic.date}</span>
        </div>
      </div>
    `
      )
      .join("");
  }

  // Manejar categorías
  document.querySelectorAll(".category-item").forEach((btn) => {
    btn.addEventListener("click", () => {
      document
        .querySelectorAll(".category-item")
        .forEach((b) => b.classList.remove("active"));
      btn.classList.add("active");
      const htmlBtn = btn as HTMLElement;
      currentCategory = htmlBtn.dataset.category || "all";
      renderTopics(currentCategory);
    });
  });

  // Modal
  const newTopicBtn = document.getElementById("newTopicBtn");
  const newTopicModal = document.getElementById("newTopicModal");
  const closeModalBtn = document.getElementById("closeModalBtn");
  const cancelBtn = document.getElementById("cancelBtn");
  const newTopicForm = document.getElementById("newTopicForm");

  newTopicBtn?.addEventListener("click", () => {
    newTopicModal?.classList.add("show");
  });

  closeModalBtn?.addEventListener("click", () => {
    newTopicModal?.classList.remove("show");
  });

  cancelBtn?.addEventListener("click", () => {
    newTopicModal?.classList.remove("show");
  });

  document.querySelector(".modal-overlay")?.addEventListener("click", () => {
    newTopicModal?.classList.remove("show");
  });

  newTopicForm?.addEventListener("submit", (e) => {
    e.preventDefault();
    const user = JSON.parse(localStorage.getItem("user") || "{}");

    const titleInput = document.getElementById(
      "topicTitle"
    ) as HTMLInputElement;
    const contentInput = document.getElementById(
      "topicContent"
    ) as HTMLTextAreaElement;
    const categoryInput = document.getElementById(
      "topicCategory"
    ) as HTMLSelectElement;

    if (!titleInput || !contentInput || !categoryInput) return;

    const newTopic = {
      id: topics.length + 1,
      title: titleInput.value,
      content: contentInput.value,
      category: categoryInput.value,
      author: {
        name: user.name || "Usuario",
        avatar:
          user.avatar ||
          "https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?q=80&w=100&auto=format&fit=crop",
      },
      replies: 0,
      views: 0,
      date: "Ahora",
    };

    topics.unshift(newTopic);
    renderTopics(currentCategory);
    newTopicModal?.classList.remove("show");
    (newTopicForm as HTMLFormElement).reset();
  });

  // Inicializar
  renderTopics();
</script>
